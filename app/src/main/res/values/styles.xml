<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text" parent="TextAppearance.AppCompat" />

    <style name="Text.Medium">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Medium.SmallSize">
        <item name="android:textSize">@dimen/text_12sp</item>
    </style>

    <style name="Text.Regular">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Text.Medium.InfoTitleItem">
        <item name="android:textSize">@dimen/text_13sp</item>
    </style>

    <style name="Text.Medium.InfoTitle">
        <item name="android:textSize">@dimen/text_20sp</item>
    </style>

    <style name="Text.Medium.AppearanceToolbar">
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Regular.Description">
        <item name="android:textSize">@dimen/text_12sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="Text.Regular.Description.Info">
        <item name="android:textSize">@dimen/text_15sp</item>
    </style>
</resources>